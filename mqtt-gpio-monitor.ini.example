[global]
MODULE             = <gpio or pfio>
DEBUG              = True

MQTT_HOST          = localhost
MQTT_PORT          = 1883
MQTT_USERNAME      = 
MQTT_PASSWORD      = 
MQTT_CLIENT_ID     = mqtt-gpio-monitor
MQTT_QOS           = 2
MQTT_RETAIN        = False
MQTT_CLEAN_SESSION = True
# Uncomment and set to enable TLS
#MQTT_CA_CERT_PATH  = /etc/ssl/certs/relevant_ca.pem

MQTT_TOPIC         = /mqtt-gpio-monitor
MQTT_LWT           = /clients/mqtt-gpio-monitor

MONITOR_PINS       = 1, 2, 3, 4
MONITOR_POLL       = 0.1
MONITOR_REFRESH    = /mqtt-gpio-monitor/refresh
